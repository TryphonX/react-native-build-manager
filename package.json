{
	"name": "react-native-android-builder",
	"type": "module",
	"version": "0.1.0",
	"description": "Increments versions and builds release apk / aab.",
	"main": "./out/index.js",
	"bin": {
		"android-builder": "./out/cli.js"
	},
	"author": "Tryphon Ksydas tryphonxdev@gmail.com",
	"repository": {
		"type": "git",
		"url": "https://github.com/TryphonX/react-native-android-builder"
	},
	"license": "MIT",
	"scripts": {
		"build": "tsc --build",
		"clean": "tsc --build --clean",
		"start": "tsc --build && node ./out/",
		"release": "release-it",
		"generate-release-bundle-android": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle",
		"build-android": "npm run generate-release-bundle-android && cd ./android/ && gradlew assembleRelease"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.1.0",
		"@commitlint/config-conventional": "^13.1.0",
		"@types/prompt-sync": "^4.1.1",
		"@typescript-eslint/eslint-plugin": "^4.28.5",
		"@typescript-eslint/parser": "^4.28.5",
		"chalk": "^4.1.1",
		"cli-select": "^1.1.2",
		"eslint": "^7.31.0",
		"husky": "^7.0.1",
		"prompt-sync": "^4.2.0",
		"release-it": "^14.10.1",
		"typescript": "^3.2.2"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"publishConfig": {
		"cache": "cache/.npm",
		"registry": "https://registry.npmjs.org/"
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: release ${version}",
			"tagName": "v${version}"
		},
		"npm": {
			"publish": true
		},
		"github": {
			"release": true
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": "angular"
			}
		}
	}
}